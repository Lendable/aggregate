{
  "extends": [
    "config:base"
  ],
  "rangeStrategy": "update-lockfile",
  "prHourlyLimit": 0,
  "packageRules": [
    {
      "matchPackagePatterns": ["*"],
      "enabled": false
    },
    {
      "matchDatasources": ["docker"],
      "enabled": true,
      "groupName": "docker",
      "platformAutomerge": true,
      "automergeType": "pr",
      "enabled": true,
    },
    {
      "matchPaths": ["+(composer.json)"],
      "matchDepTypes": ["require"],
      "automerge": true,
      "platformAutomerge": true,
      "automergeType": "pr",
      "enabled": true,
      "groupName": "composer"
    },
    {
      "matchPaths": ["+(composer.json)"],
      "matchDepTypes": ["require-dev"],
      "automerge": true,
      "platformAutomerge": true,
      "automergeType": "pr",
      "enabled": true,
      "groupName": "composer-dev"
    },
    {
      "matchPaths": [".github/**"],
      "enabled": true,
      "groupName": "github-actions"
    }
  ]
}
